<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sergiosfilho.mundishopclient" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ProductActivity" android:label="@string/details" ></activity>
        <activity android:name=".PurchaseActivity" android:label="@string/purchase_title" android:noHistory="true" ></activity>
        <activity android:name=".PurchaseHistoryActivity" android:label="@string/purchase_history" ></activity>

    </application>

</manifest>
